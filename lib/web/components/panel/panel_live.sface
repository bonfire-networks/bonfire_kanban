<div x-show="open_panel"  class="fixed inset-y-0 right-0 flex max-w-full pl-10 -mr-4 top-16">
  <div 
    x-show="open_panel" 
    x-transition:enter="transform transition ease-in-out duration-500 sm:duration-700" 
    x-transition:enter-start="translate-x-full" 
    x-transition:enter-end="translate-x-0" 
    x-transition:leave="transform transition ease-in-out duration-500 sm:duration-700" 
    x-transition:leave-start="translate-x-0" 
    x-transition:leave-end="translate-x-full" 
    class="w-screen max-w-sm" 
    x-description="Slide-over panel, show/hide based on slide-over state.">
    <div class="flex flex-col h-full py-6 overflow-y-scroll bg-base-100 shadow-xl">
      <div class="px-4 sm:px-6">
        <div class="flex items-start justify-between pb-3 border-b border-gray-300">
          <h2 class="text-lg font-medium text-base-content-900" id="slide-over-title">
            {l "Menu"}
          </h2>
          <div class="flex items-center ml-3 h-7">
            <button type="button" class="text-base-content-400 rounded-md hover:text-base-content-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-secondary-500" @click="open_panel = false">
              <span class="sr-only">{l "Close panel"}</span>
              <svg class="w-6 h-6" x-description="Heroicon name: outline/x" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>
      <div class="relative flex-1 px-4 mt-6 sm:px-6">
        <div class="">
          <div class="flex items-center space-x-2">
            <Outline.MenuAlt2Icon class="w-4 h-4 text-base-content-700" />
            <div class="text-sm font-semibold text-base-content-700 capitalize">{l "About this board"}</div>
          </div>
          <div class="mt-1 text-sm prose-sm prose text-base-content-700">{e(@board, :note, "")}</div>
        </div>

        <div class="mt-6">
          <div class="flex items-center space-x-2">
            <Outline.ChatAlt2Icon class="w-4 h-4 text-base-content-700" />
            <div class="text-sm font-semibold text-base-content-700 capitalize">{l "Activity"}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>